<div align="center" class=container>
  <%= render @article %>
  <div align="center" class="btn-group">
      <%= link_to "Back to articles", articles_path, class:"btn btn-secondary border b-redius r-2" %>

   <% if current_user == @article.user || current_user.admin?%>

    <%= link_to "Edit this article", edit_article_path(@article), class:"btn btn-warning border b-redius r-2" %>
    <%= button_to "Destroy this article", @article, method: :delete,class:"btn btn-danger border b-redius r-2" %>

   <%end%>
  </div>
</div>
<br>


<div align="center" class=container>
  <%= render 'comments/form', article: @article,comment: @article.comments.build, submit_label:"Reply" %>

  <% @comments.each do |comment| %>
    <%= render 'comments/comment',article:@article , comment:comment %>
    <% end %>
</div>


