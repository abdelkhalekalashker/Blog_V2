<h1 class="text-center"><%= pluralize(@articles.count, "Result") %></h1>
<div class="container">
  <table class="table table-dark table-striped">
    <thead>
      <tr align="center">
        <th>Title</th>
        <th>Body</th>
        <th>User</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr align="center">
          <td><%= link_to article.title, article %></td>
          <td><%= article.body.to_plain_text.truncate(70) %></td>
          <td><%= link_to article.user.first_name, article.user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


