<div class="comment-<%= comment.id %> container" style="border: 1px solid black; border-radiuse:2px; padding:1em ; margin:1em;">
    
    <h4><%= comment.user.name %><br></h4>
    <span>Commented <%= time_ago_in_words(comment.created_at) %></span>

    <% if current_user == comment.user %>
        <div class="button-group float-end" >
            <%= button_to "Delete" , [article,comment] , method: :delete , class:"btn btn-danger mb-6" %>
        </div>
    <% end %>
    <hr>
    <p><%= comment.body %></p>

    
</div>